{
    "installCommand": "npm install --legacy-peer-deps",
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      },
      {
        "src": "src/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/index.js" }, // Route API requests to the Serverless Function
      { "src": "/(.*)", "dest": "/src/$1" } // Route all other requests to static files
    ]
  }